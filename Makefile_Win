
CXX=g++
CXXFLAGS=-std=c++11 -fexec-charset=gbk -Wall -O2

TARGET_DIR:=build
SRCS:=$(wildcard *.cpp)
TARGETS:=$(patsubst %.cpp,$(TARGET_DIR)/%.exe,$(SRCS))


.PHONY: all

all: $(TARGET_DIR) $(TARGETS)

$(TARGET_DIR):
	mkdir -p $@

$(TARGET_DIR)/%.exe: %.cpp
	@echo compile $^
	$(CXX) $(CXXFLAGS) $^ -o $@ 
	@echo

